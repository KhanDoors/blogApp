<h1>Edit Page</h1>

<% include ./partials/header %>



    <div class="ui maintext container segment">
        <div class="ui huge header">Edit <%= blog.title %></div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label for="image">Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label for="blog post">Comments</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>            
            <button class="ui inverted teal button">submit</button>
        </form>
    </div>


    <% include ./partials/footer %>